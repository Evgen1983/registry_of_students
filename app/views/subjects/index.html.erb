<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Semestr</th>
      <th>Name</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student.subjects.each do |subject| %>
      <tr>
        <td><%= subject.semestr %></td>
        <td><%= subject.name %></td>
        <td><%= subject.grade %></td>
        <td><%= link_to 'Show', student_subject_path(subject.student, subject)%></td>
        <td><%= link_to 'Edit', edit_student_subject_path(subject.student, subject) %></td>
        <td><%= link_to 'Destroy', [subject.student, subject], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', student_path(@student)%>
